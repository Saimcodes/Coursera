<script>
function myFunction() {
var x = document.getElementById("signup-password");
var x2 = document.getElementById("signup-password-confirm");

if (x.type === "password") {
x.type = "text";
x2.type="text";
} else {
x.type = "password";
x2.type = "password";
}
}
</script>
